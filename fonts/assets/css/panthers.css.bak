.div-line{
	float: left;
    margin-top: 18px;
}
.main-nav li:hover .sub-menu{
	display:block;
}
.sub-menu{
	background-image: url("imagenes/submenu-bkg.png");
    border-bottom: 1px solid #B5B5B5;
    display: none;
    height: 110px;
    left: 0;
    position: absolute;
    top: 83px;
    width: 100%;
}
.desp{
	margin: 0 auto;
    padding: 24px 0;
    width: 940px;
}
.desp > img{
	float: left;
    margin: 0 20px 0 0;
}

.desp-nav{
	float: left;
    width: 400px;
}

.desp-nav ul{
	float: left;
    width: 200px;
}
.desp-nav li{
	float: none;
    margin-top: 0;
}
.desp-nav li a{
	color: #A7A7A7 !important;
    cursor: pointer;
    font-size: 14px;
    padding: 0;
    text-align: left;
	width: 100%;
}
.desp-nav li a:hover{
	color:#fff !important;
}
.quote{
	border-bottom: 1px solid #303030;
    border-top: 1px solid #303030;
    float: right;
    padding: 5px 0;
    text-align: right;
    width: 470px;
}
.quote p{
	display: inline-block;
    margin: 0;
    max-width: 410px;
    text-align: right;
    vertical-align: top;
}
.quote-l{
	display: inline-block;
    vertical-align: middle;
}
.quote-r{
	display: inline-block;
    vertical-align: bottom;
}
